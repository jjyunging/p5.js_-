<script>

// ===== 과제 2 p5.js 코드 시작 =====

function setup() {
  createCanvas(600, 400);
  noLoop();
  rectMode(CENTER);
}

function draw() {
  background(200, 250, 240);

  // 뒷머리
  noStroke();
  fill(20);
  ellipse(200, 310, 250, 420);

  // 몸통
  fill(230, 210, 180);
  rect(200, 465, 190, 220, 32);

  // 목
  fill(252, 224, 202);
  rect(200, 335, 40, 55, 10);

  // 얼굴
  fill(252, 224, 202);
  ellipse(200, 240, 180, 220);

  // 귀
  fill(252, 224, 202);
  ellipse(115, 240, 24, 24);
  ellipse(285, 240, 24, 24);

  // 눈 (흰자)
  fill(255);
  ellipse(170, 230, 34, 26);
  ellipse(230, 230, 34, 26);

  // 동공
  fill(0);
  ellipse(168, 230, 9, 9);
  ellipse(228, 230, 9, 9);

  // 눈썹
  fill(90, 60, 40);
  rect(170, 200, 36, 5, 3);
  rect(230, 200, 36, 5, 3
